<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@color/wrapper_title_view_background_color"
              android:layout_height="@dimen/wrapper_view_title_height">

    <ImageView
        android:id="@+id/iv_back"
        android:padding="10dp"
        android:layout_width="@dimen/wrapper_view_title_height"
        android:layout_height="@dimen/wrapper_view_title_height"
        android:src="@drawable/ic_back"/>
    <TextView
        android:id="@+id/tv_wrapper_view_title"
        android:textSize="@dimen/wrapper_view_title_size"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/wrapper_view_title_height"
        android:textColor="@android:color/white"
        android:text="@string/app_name"/>
</RelativeLayout>